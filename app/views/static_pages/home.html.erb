<% provide(:title, t(:home_title)) %>
<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost"><%= t :home_logged_in_h1, user_name: @current_user.name %></h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
	<h1><%= t :home_logged_off_h1 %></h1>
	<%= link_to t(:signup_btn), signup_path, class: "signup_button round" %>
<% end %>

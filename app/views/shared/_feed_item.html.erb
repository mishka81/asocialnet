<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    <span class="timestamp">
      <%= t(:post_published_lbl) %> <%= time_ago_in_words(feed_item.created_at) %><%= t :post_datetime_ago %>. 
    </span>
  </td>
  <td>
    <% if current_user?(feed_item.user) %>
      <%= link_to t(:post_delete_btn), feed_item, :method => :delete,
                                     :confirm => t(:post_delete_cfm),
                                     :title => feed_item.content %>
    <% end %>
  </td>
</tr>
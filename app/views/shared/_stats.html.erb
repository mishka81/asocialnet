<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <span id="following" class="stat">
      <%= pluralize(@user.followed_users.count, t(:user_followings_lbl)) %>
    </span>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <span id="followers" class="stat">
      <%= pluralize(@user.followers.count, t(:user_followers_lbl)) %>
    </span>
  </a>
</div>
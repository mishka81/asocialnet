<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%= t(:form_error, nb_errors: pluralize(object.errors.count, t(:form_error_lbl))) %>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>